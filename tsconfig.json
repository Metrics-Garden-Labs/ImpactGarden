{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "ES2022", "ESNext"],
    "allowJs": true,
    "target": "ES2020", // Updated to a more recent target
    "downlevelIteration": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".", // Added baseUrl for better path resolution
    "paths": {
      "@/*": ["./*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/chatbot/ActionProvider.ts",
    "src/chatbot/config.ts",
    "src/utils/combinedelegates.ts",
    "app/searchProject/**/*.tsx" // Ensure this line is correct
  ],
  "exclude": ["node_modules"]
}
